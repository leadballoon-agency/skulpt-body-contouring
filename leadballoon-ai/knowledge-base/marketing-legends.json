{
  "marketing_legends": {
    "alex_hormozi": {
      "core_principles": {
        "value_equation": {
          "formula": "Value = (Dream Outcome × Perceived Likelihood) / (Time Delay × Effort & Sacrifice)",
          "components": {
            "dream_outcome": "The result they want most",
            "perceived_likelihood": "How likely they think success is",
            "time_delay": "How long before they see results",
            "effort_sacrifice": "How hard it is to achieve"
          }
        },
        "grand_slam_offer": {
          "elements": [
            "Sell the dream outcome, not the vehicle",
            "Stack value to make price irrelevant",
            "Add urgency and scarcity ethically",
            "Guarantee to reverse risk",
            "Add bonuses that cost you little but have high perceived value"
          ]
        },
        "pricing_strategy": {
          "principle": "Charge as much as you can while still being able to sleep at night",
          "tactics": [
            "Price based on value, not cost",
            "Test prices upward until sales velocity drops",
            "Use contrast pricing (show higher price first)"
          ]
        }
      },
      "offer_templates": {
        "weight_loss": {
          "dream_outcome": "Look amazing in any outfit",
          "value_stack": [
            "Personalized nutrition plan ($997 value)",
            "Weekly accountability coaching ($1,997 value)",
            "Private community access ($497 value)",
            "Supplement protocol ($297/month value)",
            "Progress tracking app ($97/month value)"
          ],
          "guarantee": "Lose X pounds in Y days or get 2X your money back",
          "scarcity": "Only taking X clients this month"
        }
      }
    },
    "john_carlton": {
